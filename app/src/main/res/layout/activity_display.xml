<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nokukhanya.reportcard.DisplayActivity">


    <Button
        android:id="@+id/btnADD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ADD"
        android:onClick="add"
        android:textColor="#3F51B5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableTop="@drawable/ic_add_black_24dp"/>

    <Button
        android:id="@+id/btnUPDATE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="UPDATE"
        android:onClick="update"
        android:textColor="#3F51B5"
        android:layout_below="@+id/btnADD"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/ic_update_black_24dp"/>

    <Button
        android:id="@+id/btnDELETE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="DELETE"
        android:onClick="Delete"
        android:layout_below="@+id/btnUPDATE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#3F51B5"
        android:drawableTop="@drawable/ic_delete_black_24dp"/>

    <ListView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnDELETE">

    </ListView>

</RelativeLayout>
